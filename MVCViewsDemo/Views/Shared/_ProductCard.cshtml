@model Product

<div class="card h-100">
    <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 150px;">
        <span class="text-white">No Image</span>
    </div>
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Name</h5>
        <p class="text-muted small mb-2">@Model.Category</p>
        <p class="card-text flex-grow-1">@Model.Description</p>
        <div class="d-flex justify-content-between align-items-center mt-auto">
            <span class="h5 mb-0 text-primary">$@Model.Price.ToString("N2")</span>
            @if (Model.IsAvailable)
            {
                <span class="badge bg-success">In Stock (@Model.Stock)</span>
            }
            else
            {
                <span class="badge bg-danger">Out of Stock</span>
            }
        </div>
    </div>
    <div class="card-footer bg-transparent">
        <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100">
            View Details
        </a>
    </div>
</div>
