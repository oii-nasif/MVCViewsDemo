@model (string Message, string Type, bool Dismissible)

<div class="alert alert-@Model.Type @(Model.Dismissible ? "alert-dismissible fade show" : "")" role="alert">
    @Model.Message
    @if (Model.Dismissible)
    {
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    }
</div>
