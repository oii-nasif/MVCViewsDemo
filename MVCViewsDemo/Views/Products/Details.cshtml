@model Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-3">@Model.Name</h1>

            <div class="mb-3">
                <span class="badge bg-secondary">@Model.Category</span>
                @if (Model.IsAvailable)
                {
                    <span class="badge bg-success">In Stock</span>
                }
                else
                {
                    <span class="badge bg-danger">Out of Stock</span>
                }
            </div>

            <p class="lead">@Model.Description</p>

            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h6 class="text-muted">Price</h6>
                            <h3 class="text-primary">$@Model.Price.ToString("N2")</h3>
                        </div>
                        <div class="col-6">
                            <h6 class="text-muted">Stock</h6>
                            <h3>@Model.Stock units</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <h6 class="text-muted">Product Details</h6>
                <table class="table table-bordered">
                    <tr>
                        <th>Product ID</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>@Model.Category</td>
                    </tr>
                    <tr>
                        <th>Availability</th>
                        <td>
                            @if (Model.IsAvailable)
                            {
                                <span class="text-success">Available</span>
                            }
                            else
                            {
                                <span class="text-danger">Not Available</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Added On</th>
                        <td>
                            @Model.CreatedAt.ToString("MMMM dd, yyyy")
                            <small class="text-muted">(<time-ago date="@Model.CreatedAt"></time-ago>)</small>
                        </td>
                    </tr>
                </table>
            </div>

            <div class="d-flex gap-2">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">
                    Back to Products
                </a>
                <a asp-controller="Products" asp-action="ByCategory" asp-route-category="@Model.Category" class="btn btn-outline-primary">
                    More in @Model.Category
                </a>
            </div>
        </div>
    </div>
</div>
